{
  "name": "tdl-gui",
  "version": "1.0.0",
  "description": "GUI for tdl - Telegram Downloader",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win"
  },
  "author": "tdl",
  "license": "AGPL-3.0",
  "dependencies": {
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.tdl.gui",
    "productName": "TDL",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "styles.css",
      "renderer.js"
    ],
    "extraResources": [
      {
        "from": "../tdl",
        "to": "tdl",
        "filter": ["**/*"]
      }
    ],
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Network",
      "icon": "icon.png"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "icon.ico"
    }
  }
}

